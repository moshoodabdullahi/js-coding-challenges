{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-plusplus": "warn",
    "prefer-destructuring": [
      "error",
      {
        "object": true,
        "array": false
      }
    ]
  },
  "ignorePatterns": ["dist/", "build/", "axe-check.js"]
}
